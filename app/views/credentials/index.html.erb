<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="theme-color" content="#000000">
    <title>MultiPass!</title>
  </head>
<!-- Header -->
<div class="App-header App">
  <h1>Your Crednetials</h1>
  <h5> (Your secret is safe with me!)</h5>
</div>
<!-- Body -->
<div class="App-body">
  <table>
    <tr>
      <th> Website </th>
      <th> Username </th>
      <th> Password </th>
      <th> Tag </th>
      <th colspan="2"></th>
    </tr>
      <% @credentials.each do |c| %>
    <tr>
      <td><%= c.website %></td>
      <td><%= c.username %></td>
      <td><%= c.password %></td>
      <td><%= c.tag %></td>
      <td><%= link_to 'Edit', edit_credential_path(:credentials) %></td>
      <td><%= link_to 'Destroy', edit_credential_path(:credentials),
            mthod: :delete,
            data: {confirm: "Are you sure?"}%></td>
    </tr>
      <% end %>
  </table>
</div>
